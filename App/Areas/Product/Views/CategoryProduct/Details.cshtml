@model App.Models.Product.CategoryProduct
@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = Model.Title;
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";

}

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Nội dung
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-2">
            Url
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
    <a asp-action="Index">Danh sách chuyên mục</a>
</div>

@{
    _AdminSidebarService.SetActive("CategoryProduct", "Create", "Product");
}
@section Sidebar {
    @Html.Raw(_AdminSidebarService.renderHtml());
}