@using App.Menu
@inject AdminSidebarService _AdminSidebarService

@model IEnumerable<App.Models.Contacts.Contact>

@{
    ViewData["Title"] = "Danh sách liên hệ";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";

    var vitem="";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateSent)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateSent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td class="col-sm-4">
                    
                    <p class="linetype">
                        @Html.DisplayFor(modelItem => item.Message)

                    </p>
                </td>
                <td>
                    <a class="btn btn-link" asp-action="Details" asp-route-id="@item.Id">Xem</a> |

                    @{
                        vitem = "delete" + item.Id;
                    }
                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#@vitem">
                        Xóa
                       
                    </button>
                    <div class="modal fade" id="@vitem" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalCenterTitle">Bạn có chắc muốn xóa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Thao tác này sẽ không thể phục hồi lại!!
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                                    <form asp-action="Delete" asp-route-id="@item.Id">
                                        <input type="hidden" asp-route-id="@item.Id" />
                                        <input type="submit" value="Xóa" class="btn btn-danger" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
@{
    _AdminSidebarService.SetActive("Contact", "Index", "Contact");
}
@section Sidebar {
    @Html.Raw(_AdminSidebarService.renderHtml());
}